<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="740.0" prefWidth="639.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.csd214lab2nawaz.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" />
   <TextField fx:id="sid" text="id" />
   <TextField fx:id="sname" text="name" />
   <TextField fx:id="semail" text="email" />
   <TextField fx:id="szipcode" text="zipcode" />
   <Button mnemonicParsing="false" text="Insert" onAction="#InsertData" />
   <Button mnemonicParsing="false" text="Update" onAction="#UpdateData" />
   <Button mnemonicParsing="false" text="Delete" onAction="#DeleteData" />
    <Button mnemonicParsing="false" text="LoadData" onAction="#LoadData" />
    <Button onAction="#onHelloButtonClick" text="Fetch" />
   <TableView fx:id="usertable" prefHeight="200.0" prefWidth="327.0">
     <columns>
       <TableColumn fx:id="id" prefWidth="75.0" text="ID" />
       <TableColumn fx:id="name" prefWidth="75.0" text="NAME" />
         <TableColumn fx:id="email" prefWidth="75.0" text="EMAIL" />
         <TableColumn fx:id="zipcode" prefWidth="75.0" text="ZIPCODE" />
     </columns>
   </TableView>
</VBox>
